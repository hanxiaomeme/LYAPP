<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="1dp"
              android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"

                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/at_textarea1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="14sp"
                android:visibility="gone"/>

            <AutoCompleteTextView
                android:id="@+id/at_text1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/text_line"
                android:imeOptions="actionNext"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/spn_text1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/text_line"
                android:visibility="gone"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"/>

            <AutoCompleteTextView
                android:id="@+id/at_textarea2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="14sp"
                android:visibility="gone"/>

            <AutoCompleteTextView
                android:id="@+id/at_text2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/text_line"
                android:imeOptions="actionNext"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/spn_text2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/text_line"
                android:visibility="gone"></Spinner>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>